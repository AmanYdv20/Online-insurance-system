<% include partials/header %>
<div class="container">
    <div class="jumbotron">
            <form action="/policy/<%= foundPolicy._id%>?_method=PUT" method="POST">
                <h3>Edit <%= foundPolicy.name %></h3>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Policy Name</label>
                            <input type="text" class="form-control" name="policy[name]" value="<%= foundPolicy.name%>">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4"> Policy Type</label>
                            <input type="text" class="form-control" name="policy[type]" value="<%= foundPolicy.type%>">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                           <label for="inputAddress2">Net Time(in years)</label>
                           <input type="number" class="form-control" name="policy[duration]" value="<%= foundPolicy.duration%>">
                        </div>
                        <div class="form-group col-md-4">
                           <label for="inputZip">Policy Number</label>
                           <input type="text" class="form-control" name="policy[number]" value="<%= foundPolicy.number%>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputZip">Monthly Installment</label>
                            <input type="number" class="form-control" name="policy[installment]" value="<%= foundPolicy.installment%>">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                           <label for="netMoney">Net Money to be Paid</label>
                           <input type="number" class="form-control" placeholder="in lakhs" name="policy[netMoney]" value="<%= foundPolicy.netMoney%>">
                        </div>
                        <div class="form-group col-md-6">
                           <label for="inputZip">Money Customer get</label>
                           <input type="numv=ber" class="form-control" placeholder="in Lakhs" name="policy[profit]" value="<%= foundPolicy.profit%>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Description</label>
                        <input type="text" class="form-control" name="policy[description]" value="<%= foundPolicy.description%>">
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                           <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                              Check me out
                        </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Post Policy</button>
            </form>
    </div>

</div>

<%include partials/footer %>