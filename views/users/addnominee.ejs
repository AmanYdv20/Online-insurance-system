<% include ../partials/header %>
<div class="container">
    <div class="jumbotron">
            <form action="/users/<%=currentUser._id%>/addnominee" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="text">Nominee's First Name</label>
                            <input type="text" class="form-control" name="firstname" placeholder="John" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="text">Nominee's Last Name</label>
                            <input type="text" class="form-control" name="lastname" placeholder="Doe" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="sel1">Gender</label>
                            <select class="form-control" id="sel1" name="gender" required>
                              <option>Male</option>
                              <option>Female</option>
                              <option>Others</option>
                            </select>
                          </div> 
                        <div class="form-group col-md-9">
                            <label for="inputAddress2">Address</label>
                            <input type="text" class="form-control" name="address" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                           <label for="netMoney">City</label>
                           <input type="text" class="form-control" name="city" required>
                        </div>
                        <div class="form-group col-md-4">
                           <label for="address">District</label>
                           <input type="text" class="form-control" name="district" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputZip">Pin-Code</label>
                            <input type="number" class="form-control" name="pinCode" required>
                         </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                           <label for="netMoney">Phone Number</label>
                           <input type="number" class="form-control" name="mobileNo" placeholder="9413..." required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="netMoney">Relation with Customer</label>
                            <input type="text" class="form-control" name="relation" placeholder="Son, Wife" required>
                         </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
            </form>
    </div>

</div>

<%include ../partials/footer %>